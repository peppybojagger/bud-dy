<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<img class="main_bg_img" src="images/index_bg.jpg" alt="">
<main>
    <div class="container">
             <div class="login_form">
                <div class="intro">
                    <h1>BUD-DY</h1>
                    <img class="monstera" src="/images/monstera.png" alt="monstera leaf">
                    <p>Bud-dy is a gardening and houseplant management app<br> using <a target="_blank" href="https://trefle.io/">Trefle</a>'s botanical data source API.</p>
                </div>
                <% if (!isAuth) { %>
                    <form action="/signup" method="POST">
                        <div class="input-field col m6 s12">
                            <label for="email">E-Mail</label>
                            <input type="email" name="email" id="email">
                        </div>
                        <div class="input-field col m6 s12">
                            <label for="userName">Username</label>
                            <input type="text" name="userName" id="userName">
                        </div>
                        <div class="input-field col m6 s12">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password">
                        </div>
                        <div class="input-field col m6 s12">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" name="confirmPassword" id="confirmPassword">
                        </div>
                        <button class="btn" type="submit">SIGN UP</button>
                    </form>
                <% } %>
             </div>
    </div>
</main>
<%- include('includes/end.ejs') %>