<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<img class="main_bg_img" src="images/index_bg.jpg" alt="">
<main>
    <div class="container">
        <div class="row">
             <div class="login_form">
                <div class="intro">
                    <h1>BUD-DY</h1>
                    <img class="monstera" src="/images/monstera.png" alt="monstera leaf">
                    <p>Bud-dy is a gardening and houseplant management app<br> using <a target="_blank" href="https://trefle.io/">Trefle</a>'s botanical data source API.</p>
                </div>
                <% if (!isAuth) { %>
                <form action="/" method="POST">
                    <div class="input-field col m6">
                        <label for="email">Email</label>
                        <input type="email" label="email" name="email">
                    </div>
                    <div class="input-field col m6">
                        <label for="password">Password</label>
                        <input type="password" label="password" name="password">
                    </div>
                    <div class="col s12">
                        <button class="waves-effect waves-light btn" type="submit">LOGIN</button>
                    </div>
                </form>
                <% } %>
             </div>
        </div>
    </div>
</main>
<%- include('includes/end.ejs') %>