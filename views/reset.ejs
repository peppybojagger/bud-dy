<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<img class="main_bg_img" src="images/index_bg.jpg" alt="">
<main>
    <div class="container">
             <div class="login_form">
                <div class="intro">
                    <h1>BUD-DY</h1>
                    <img class="monstera" src="/images/monstera.png" alt="monstera leaf">
                    <p>Enter your E-mail to reset your password.</p>
                </div>
                <% if (!isAuth) { %>
                <form action="/reset" method="POST">
                    <div class="row">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="input-field col m12 s12">
                            <label for="email">Email</label>
                            <input type="email" label="email" name="email">
                        </div>
                        <div class="col m12 s12">
                            <button class="waves-effect waves-light btn" type="submit">RESET PASSWORD</button>
                        </div>
                    </div>
                </form>
                <% } %>
                <div class="row">
                    <% if (errorMessage) { %>
                        <div class="user-message user-message--error"><%= errorMessage %></div>
                    <% } %>
                </div>
             </div>
    </div>
</main>
<%- include('includes/end.ejs') %>