<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<main>
  <div class="container">
      <div class="row">
              <div class="col s12">
                <a href="#!" class="breadcrumb">First</a>
                <a href="#!" class="breadcrumb">Second</a>
                <a href="#!" class="breadcrumb">Third</a>
              </div>
        <div class="col m4">
          <img class="top_img" src="<%= plants.image_url %>" alt="<%= plants.common_name %>">
        </div>
        <div class="col m8">
          <% if (plants.common_name) { %>
            <h1><%= plants.common_name %></h1>
          <% } else { %>
            <h1><%= plants.scientific_name %></h1>
          <% } %>
        </div>
      </div>
      <hr>
      <div class="row">

      </div>
      <div class="row">
          <p><%= plants.scientific_name %></p>
      </div>
      <div class="row">
        <form action="/account/home" method="POST">
          <button class="btn" type="submit">Add To My Plants</button>
          <input type="hidden" name="id">
          <input type="hidden" name="common_name" value="<%= plants.common_name %>">
          <input type="hidden" name="scientific_name" value="<%= plants.scientific_name %>">
          <input type="hidden" name="image_url" value="<%= plants.image_url %>">
          <input type="hidden" name="description" value="<%= plants.description %>">
          <input type="hidden" name="slug" value="<%= plants.slug %>">
      </form>
      </div>
  </div>
</main>
<%- include('includes/end.ejs') %>